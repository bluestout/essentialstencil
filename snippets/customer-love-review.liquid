{% for block in section.blocks %}
  {% if block.type == 'review' %}
    {% assign sub_title = block.settings.sub_title %}
    {% assign title = block.settings.title %}
    {% assign comments = block.settings.comment %}

    <div class="stencil-collection-title-wrap">
      <div class="stencil-action-inspired-title">
        {{ sub_title }}
      </div>
      <div class="stencil-action-main-title {% if block.settings.bg_status %}bg-true{% endif %}" style="--bg-color: {{block.settings.bg_color}}">
        {{ title }}
      </div>
      <div class="stencil-action-by-title">
        {{ comments }}
      </div>
      <div class="small-divider"></div>
    </div>
    <!--Start Stamped.io Auto Installation--><div id="stamped-main-widget" class="stamped-main-widget" data-widget-style="standard" data-product-id="{{ product.id }}" data-name="{{ product.title | escape }}" data-url="{{ shop.url }}{{ product.url }}" data-image-url="{{ product.featured_image | product_img_url: "large" |replace: '?', '%3F' | replace: '&','%26'}}" data-description="{{ product.description | escape }}" data-product-sku="{{product.handle}}">{{ product.metafields.stamped.reviews }}</div><!--End Stamped.io Auto Installation-->
  {% endif %}
{% endfor %}
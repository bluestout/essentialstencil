{% comment %}
** Single featured collection - homepage partial **
- Draggable section
{% endcomment %}

{% include 'include-featured-collection' %}

{% schema %}
{
  "name": "Featured collection",
  "class": "featured-collection-section",
  "settings": [
    {
      "type": "text",
      "id": "sub_title",
      "label": "Pre Heading",
      "default": "Best Sellers"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Most Loved"
    },
    {
      "type": "checkbox",
      "id": "bg_status",
      "label": "Title background status"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Backgorund color",
      "default": "#f7ebe5"
    },
    {
      "type": "text",
      "id": "comment",
      "label": "Sub title",
      "default": "Only on Essentialstencil.com"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "radio",
      "id": "collection_style",
      "label": "Collection layout",
      "default": "grid",
      "options": [
        {
          "value": "slider",
          "label": "Slider"
        },
        {
          "value": "grid",
          "label": "Grid"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "collection_description",
      "label": "Show description",
      "default": true
    },
    {
      "type": "range",
      "id": "products_per",
      "label": "Products per row",
      "min": 2,
      "max": 7,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Limit products",
      "min": 2,
      "max": 50,
      "step": 1,
      "default": 48
    }
  ],
  "presets": [{
    "name": "Featured collection",
    "category": "Collection",
    "settings": {

    }
  }]
}
{% endschema %}

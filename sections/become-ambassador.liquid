{% comment %}
** Image with text (half and half view) - homepage partial **
- Draggable section
- Uses blocks
{% endcomment %}

{% if section.settings.frontpage_grid_style == false %}
  <div class="container">
{% endif %}
    <div class="featured_collections
                clearfix across-{{section.settings.featured_links_per_row}} image-align--{{ section.settings.frontpage_image_position }}">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <section class="featured-link--section featured-link--image section-{{ forloop.index }}" {{ block.shopify_attributes }}>
            <div class="featured-link--half hide medium-down--show">
              <div class="flex-wrap-align info text-align--center">
                <div class="join-stencil-title">
                  <a  target="_blank" {% if block.settings.link != blank %}href="{{ block.settings.link }}"{% endif %}>
                    {{ block.settings.title }}
                  </a>
                </div>
                {% if block.settings.text != blank %}
                  <div class="description">{{ block.settings.text }}</div>
                {% endif %}
              </div>
            </div>
            <div class="featured-link--half featured-link--image featured-link--margin">
              <div class="featured-link--wrap">
                <div class="featured-image-block flex-align">               
                  <img  src="{{ block.settings.club_stencil_bg | img_url: '2048x' }}"
                    alt="{% if block.settings.club_stencil_bg.alt != blank %}{{ block.settings.club_stencil_bg.alt | escape }}{% else %}{{ block.settings.title | escape }}{% endif %}"
                    class="stencil-club-img1 medium-down--hide"
                  />
                  <img  src="{{ block.settings.club_stencil_bg_mobile | img_url: '1024x' }}"
                    alt="{% if block.settings.club_stencil_bg_mobile.alt != blank %}{{ block.settings.club_stencil_bg.alt | escape }}{% else %}{{ block.settings.title | escape }}{% endif %}"
                    class="stencil-club-img1 hide medium-down--show"
                  />
                </div>
              </div>
            </div>
            <div class="featured-link--half">
              <div class="flex-wrap-align info text-align--{{section.settings.frontpage_text_align}}">
                <div class="join-stencil-title medium-down--hide">
                  <a  target="_blank" {% if block.settings.link != blank %}href="{{ block.settings.link }}"{% endif %}>
                    {{ block.settings.title }}
                  </a>
                </div>
                {% if block.settings.text != blank %}
                  <div class="description  medium-down--hide">{{ block.settings.text }}</div>
                {% endif %}
                {% if block.settings.button_label != blank %}
                  <a  target="_blank" {% if block.settings.link != blank %}href="{{ block.settings.link }}"{% endif %} class="button">
                    {{ block.settings.button_label }}
                  </a>
                {% endif %}
              </div>
            </div>
          </section>
        {% endfor %}
      {% endif %}
    </div>
{% if section.settings.frontpage_grid_style == false %}
  </div>
{% endif %}

{% schema %}
{
  "name": "Become an Ambassador",
  "class": "become-ambassador-section",
  "max_blocks": 16,
  "settings": [
    {
      "type": "select",
      "id": "featured_links_per_row",
      "label": "Images per row",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ]
    },
    {
      "type": "select",
      "id": "frontpage_text_align",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "select",
      "id": "frontpage_image_position",
      "label": "First image position",
      "info": "Subsequent images will appear staggered",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "frontpage_grid_style",
      "label": "Wide display"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image with text",
      "settings": [
        {
          "type": "image_picker",
          "id": "club_stencil_bg",
          "label": "Club Stencil Background"
        },
        {
          "type": "image_picker",
          "id": "club_stencil_bg_mobile",
          "label": "Club Stencil mobile Background"
        },
        {
          "type": "image_picker",
          "id": "headline_accent_img",
          "label": "Headline Accent Stencil Club"
        },

        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Your headline"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Promotion description appears here.</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "View all"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Become an Ambassador",
    "category": "Image",
    "settings": {
      "featured_links_per_row": "1",
      "frontpage_text_align": "left"
    },
    "blocks": [
      {
        "type": "image"
      }
    ]
  }]
}
{% endschema %}
